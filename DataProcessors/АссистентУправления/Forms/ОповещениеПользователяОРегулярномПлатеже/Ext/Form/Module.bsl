				ГруппаРасписание);
			ДекорацияРазделитель_2.Заголовок = Элементы.Разделитель_2_0.Заголовок;
			
			ПолеНачалоВыполнения = Элементы.Добавить("НачалоВыполнения_" + ИндексНастройки, Тип("ПолеФормы"), ГруппаРасписание);
			ПолеНачалоВыполнения.ПутьКДанным = "НастройкиЗадач[" + ИндексНастройки + "].НачалоВыполнения";
