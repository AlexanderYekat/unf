&НаСервере
Функция ЗадачаПоРегулярнымПлатежам()
	
	Возврат Справочники.ЗадачиАссистентаПоРегулярнымПлатежам.ЗадачаПоРегулярнымПлатежамОсновная;
	
КонецФункции

&НаСервере
Процедура ОбновитьБлокиНастроекАссистента()
	
	Задача = ЗадачаПоРегулярнымПлатежам();
	
	Если ОтображатьОдинДокумент Тогда
		СтрокаТЧ = Задача.ПараметрыРегулярныхПлатежей.Найти(ИсходныйДокументОтбор, "ИсходныйДокумент");
		НастройкаЗадачиПоНовомуДокументу = СтрокаТЧ = Неопределено;
	Иначе	
		НастройкаЗадачиПоНовомуДокументу = Ложь;
	КонецЕсли;

	Если Задача.ПараметрыРегулярныхПлатежей.Количество() = 0 Или НастройкаЗадачиПоНовомуДокументу Тогда
		ДобавитьПустыеНастройкиЗадачи();
		Если НастройкаЗадачиПоНовомуДокументу Тогда
			СтрокаНастроек = НастройкиЗадач[0];
			СтрокаНастроек.ИсходныйДокумент = ИсходныйДокументОтбор;
			КалендарныеДанные = КалендарныеДанные(СтрокаНастроек.ИсходныйДокумент);
			ЗаполнитьЗначенияСвойств(СтрокаНастроек, КалендарныеДанные);
		КонецЕсли;
		Возврат;
	Иначе

		НастройкиЗадач.Очистить();	
		ДанныеЗадачи = Задача.ПолучитьОбъект();
		
		Для Каждого СтрокаТЧ Из ДанныеЗадачи.ПараметрыРегулярныхПлатежей Цикл
			
			Если ОтображатьОдинДокумент Тогда
				Если СтрокаТЧ.ИсходныйДокумент <> ИсходныйДокументОтбор Тогда
					Продолжить;
				КонецЕсли;
				ВыполняетсяПоОдномуДокументу = Истина;
			КонецЕсли;

			СтрокаНастроек = НастройкиЗадач.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаНастроек, СтрокаТЧ);
			СтрокаНастроек.ИсходныйДокументДоИзменения = СтрокаНастроек.ИсходныйДокумент;
			ЗначенияЗадачиПоИдентификатору(СтрокаНастроек, СтрокаТЧ);
			ЗаполнитьСпособОповещенияПоЗначению(
				СтрокаНастроек,
				СтрокаНастроек.ПользовательДляОповещения,
				СтрокаТЧ.СпособОповещения);
		КонецЦикла;
			
		ВРаботе = ДанныеЗадачи.Используется;
		
	КонецЕсли;
	
КонецПроцедуры

&НаСервереБезКонтекста
Функция КалендарныеДанные(ИсходныйДокумент)

	Результат = Новый Структура("НачалоВыполнения, ОкончаниеВыполнения, Периодичность");
	
	МинимальнаяДатаНачала = КонецДня(ТекущаяДатаСеанса()) + 1;
	ДатаДокумента = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ИсходныйДокумент, "Дата");
	ДатаНачалаОтДатыДокумента = ДобавитьМесяц(ДатаДокумента, 1);
	Результат.НачалоВыполнения = Макс(МинимальнаяДатаНачала, ДатаНачалаОтДатыДокумента);
	Результат.ОкончаниеВыполнения = ДобавитьМесяц(Результат.НачалоВыполнения, 60);
	Результат.Периодичность = Перечисления.Периодичность.Месяц;
	
	Возврат Результат;

КонецФункции

&НаСервере
Процедура ДобавитьПустыеНастройкиЗадачи()
	
	ЛичноеСообщение = Перечисления.СпособОповещенияАссистентаУправления.СообщениеЛичногоОбсужденияПользователю;
	
	ОбщиеНастройки = Новый Структура;
	ОбщиеНастройки.Вставить("Модифицированность", Истина);

	ОбщиеНастройки.Вставить("ТипОповещения",			 "Обсуждение");
	ОбщиеНастройки.Вставить("ТипОбсуждения",			 "Личное");
	ОбщиеНастройки.Вставить("ПользовательДляОповещения", Пользователи.АвторизованныйПользователь());
	
	НоваяНастройка = НастройкиЗадач.Добавить();
	ЗаполнитьЗначенияСвойств(НоваяНастройка, ОбщиеНастройки);
	
	ЗаполнитьСпособОповещенияПоЗначению(НоваяНастройка, 
		НоваяНастройка.ПользовательДляОповещения,
		ЛичноеСообщение);
		
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьСпособОповещенияПоЗначению(СтрокаНастроек, ПользовательДляОповещения, СпособОповещения)
	
	Если НЕ ЗначениеЗаполнено(ПользовательДляОповещения) 
			И СтрокаНастроек.ТипОбсуждения <> "Групповое" Тогда
		
		ПредставлениеСпособаОповещения = СпособыОповещения.НайтиСтроки(Новый Структура("Значение", СпособОповещения));
		Если ПредставлениеСпособаОповещения.Количество() = 0 Тогда
			Возврат;
		КонецЕсли;
		
		СтрокаНастроек.СпособОповещения = ПредставлениеСпособаОповещения[0].Представление;
		СтрокаНастроек.ПользовательДляОповещения = ПользовательДляОповещения;
		
		Возврат;
		
	КонецЕсли;
	
	СтрокаНастроек.СпособОповещения 		 = ПользовательДляОповещения;
	СтрокаНастроек.ПользовательДляОповещения = ПользовательДляОповещения;
	
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьСпособыОповещения()
	
	СпособыОповещения.Очистить();
	
	СпособОповестиПользователя = СпособыОповещения.Добавить();
	СпособОповестиПользователя.Значение = 
		Перечисления.СпособОповещенияАссистентаУправления.СообщениеЛичногоОбсужденияПользователю;
	СпособОповестиПользователя.Представление = НСтр("ru = 'Другому пользователю'");
	
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьСпособОповещенияПоПредставлению(СтрокаТЧ, СтрокаНастроек)
	
	Таблица = СпособыОповещения;
	
	СтрокаТЧ.УчетнаяЗапись = СтрокаНастроек.УчетнаяЗапись;
	Если СтрокаНастроек.ТипОповещения = "Email" Тогда
		СтрокаТЧ.СпособОповещения = Перечисления.СпособОповещенияАссистентаУправления.ПустаяСсылка();
		Возврат;
	КонецЕсли;
		
	Если ЗначениеЗаполнено(СтрокаНастроек.ПользовательДляОповещения) И СтрокаНастроек.ТипОбсуждения = "Личное" Тогда
		СтрокаТЧ.СпособОповещения = Перечисления.СпособОповещенияАссистентаУправления.СообщениеЛичногоОбсужденияПользователю;
	Иначе
		СтрокаТЧ.СпособОповещения = Перечисления.СпособОповещенияАссистентаУправления.СообщениеОбщегоОбсуждения;
	КонецЕсли;
	
	ЗначениеСпособаОповещения = Таблица.НайтиСтроки(Новый Структура("Представление", СтрокаТЧ.СпособОповещения));
	
	Если ЗначениеСпособаОповещения.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	СтрокаТЧ.СпособОповещения = ЗначениеСпособаОповещения[0].Значение;
			
КонецПроцедуры

&НаСервере
Процедура СоздатьИзменитьЗадачиАссистента()
	
	ЗадачиСПриветствием = Новый Массив;
	
	НачатьТранзакцию();
	Попытка
					
		Задача = ЗадачаПоРегулярнымПлатежам();
		ЗадачаОбъект = Задача.ПолучитьОбъект();
		ЗадачаОбъект.Заблокировать();
		Если ПустойСправочникЗадач Тогда
			ЗадачаОбъект.НеобходимоПоприветствовать = Истина;
			АвторИзменений = Пользователи.АвторизованныйПользователь();
			ЕстьЗадачиПользователя = АссистентУправления.ЕстьЗадачиПользователя(АвторИзменений);
		КонецЕсли;
		
		Если ОтображатьОдинДокумент Тогда
			// Форма открыта из документа
			СтрокаНастроек = НастройкиЗадач[0];
		
			Если ВыполняетсяПоОдномуДокументу Тогда
				ЗадачаОбъект.Используется = Истина;
				ЭтотОбъект.ВРаботе = Истина;
			КонецЕсли;

			СтрокаТЧ = ЗадачаОбъект.ПараметрыРегулярныхПлатежей.Найти(ИсходныйДокументОтбор, "ИсходныйДокумент");
			
			Если ВыполняетсяПоОдномуДокументу Тогда
				// Флаг установлен - добавляем или изменяем строку
				
				Если СтрокаТЧ = Неопределено Тогда
					СтрокаТЧ = ЗадачаОбъект.ПараметрыРегулярныхПлатежей.Добавить();
				КонецЕсли;
				
				ЗаполнитьЗначенияСвойств(СтрокаТЧ, СтрокаНастроек);
				
				СтрокаТЧ.Идентификатор = ИдентификаторПоТипуОповещения(СтрокаНастроек.ТипОповещения);
				
				ЗаполнитьСпособОповещенияПоПредставлению(СтрокаТЧ, СтрокаНастроек);
				ЗаполнитьЗначенияЗадачиПоИдентификатору(СтрокаТЧ, СтрокаНастроек);
				
				Если СтрокаНастроек.Модифицированность Тогда
					РегистрыСведений.РегулярныеПлатежиГрафик.ОбновитьГрафикПоДокументу(СтрокаТЧ);
					СтрокаНастроек.Модифицированность = Ложь;
				КонецЕсли;
			Иначе
				// Флаг снят - удаляем строку
				Если СтрокаТЧ <> Неопределено Тогда
					ЗадачаОбъект.ПараметрыРегулярныхПлатежей.Удалить(СтрокаТЧ);	
					РегистрыСведений.РегулярныеПлатежиГрафик.ОчиститьГрафикПоДокументу(СтрокаНастроек.ИсходныйДокумент);
				КонецЕсли;
				СтрокаНастроек.Модифицированность = Ложь;
			КонецЕсли;
				
		Иначе
			// Форма открыта из Ассистента управления
			ЗадачаОбъект.Используется = ЭтотОбъект.ВРаботе;
			ЗадачаОбъект.ПараметрыРегулярныхПлатежей.Очистить();
			
			Для Каждого СтрокаНастроек Из НастройкиЗадач Цикл

				СохранятьСтроку = Не СтрокаНастроек.Удалена И ВРаботе;
				
				Если Не СохранятьСтроку Тогда
					РегистрыСведений.РегулярныеПлатежиГрафик.ОчиститьГрафикПоДокументу(СтрокаНастроек.ИсходныйДокумент);
					Продолжить;
				КонецЕсли;
				
				СтрокаТЧ = ЗадачаОбъект.ПараметрыРегулярныхПлатежей.Добавить();
				ЗаполнитьЗначенияСвойств(СтрокаТЧ, СтрокаНастроек);
				
				СтрокаТЧ.Идентификатор = ИдентификаторПоТипуОповещения(СтрокаНастроек.ТипОповещения);
				
				ЗаполнитьСпособОповещенияПоПредставлению(СтрокаТЧ, СтрокаНастроек);
				ЗаполнитьЗначенияЗадачиПоИдентификатору(СтрокаТЧ, СтрокаНастроек);
				
				Если СтрокаНастроек.Модифицированность Тогда
					РегистрыСведений.РегулярныеПлатежиГрафик.ОбновитьГрафикПоДокументу(СтрокаТЧ,
						СтрокаНастроек.ИсходныйДокументДоИзменения);
					СтрокаНастроек.Модифицированность = Ложь;
				КонецЕсли;
				
			КонецЦикла;
		
		КонецЕсли;
		
		Если ЗадачаОбъект.Модифицированность() Тогда
			ЗадачаОбъект.Записать();
		КонецЕсли;
		
		Если ЗадачаОбъект.НеобходимоПоприветствовать Тогда
			ЗадачиСПриветствием.Добавить(ЗадачаОбъект.Ссылка);
		КонецЕсли;
		
		ЗадачаОбъект.Разблокировать();
		
		ЗафиксироватьТранзакцию();
		
	Исключение
		
		ОтменитьТранзакцию();
		
		ТекстОшибки = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		ВызватьИсключение ТекстОшибки;
		
	КонецПопытки;
	
	Если ЗадачиСПриветствием.Количество() <> 0 Тогда
		Справочники.ЗадачиАссистентаПоРегулярнымПлатежам.ПоприветствоватьПользователяПриЗаписиПервыхЗадач(ЗадачиСПриветствием);
	КонецЕсли;
	
