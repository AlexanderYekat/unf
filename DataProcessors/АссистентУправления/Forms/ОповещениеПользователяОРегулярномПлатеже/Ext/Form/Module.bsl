			ПолеНачалоВыполнения.УстановитьДействие("ПриИзменении", "Подключаемый_НачалоВыполненияПриИзменении");

			ДекорацияРазделитель = Элементы.Добавить("Разделитель_" + ИндексНастройки, Тип("ДекорацияФормы"),
				ГруппаРасписание);
			ДекорацияРазделитель.Заголовок = Элементы.Разделитель_0.Заголовок;
			
			ПолеПериодичность = Элементы.Добавить("Периодичность_" + ИндексНастройки, Тип("ПолеФормы"), ГруппаРасписание);
			ПолеПериодичность.ПутьКДанным = "НастройкиЗадач[" + ИндексНастройки + "].Периодичность";
			УстановитьОформлениеПоля(ПолеПериодичность, Элементы.Периодичность_0);
			ПолеПериодичность.УстановитьДействие("ПриИзменении", "Подключаемый_ПериодичностьПриИзменении");
			Для Каждого ЭлементСписка Из Элементы.Периодичность_0.СписокВыбора Цикл
				ПолеПериодичность.СписокВыбора.Добавить(ЭлементСписка.Значение, ЭлементСписка.Представление);
			КонецЦикла;
			
			ПолеОкончаниеВыполнения = Элементы.Добавить("ОкончаниеВыполнения_" + ИндексНастройки, Тип("ПолеФормы"),
				ГруппаРасписание);
			ПолеОкончаниеВыполнения.ПутьКДанным = "НастройкиЗадач[" + ИндексНастройки + "].ОкончаниеВыполнения";
			УстановитьОформлениеПоля(ПолеОкончаниеВыполнения, Элементы.ОкончаниеВыполнения_0);
