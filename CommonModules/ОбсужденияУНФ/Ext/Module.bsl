		// Нельзя записать сообщение от имени служебного пользователя
		Возврат;
	КонецЕсли;
	
	ДобавитьСообщениеВОчередьОтправки(ДанныеСообщения);
	
КонецПроцедуры

Процедура ИспользованиеРеглЗаданияЗаписьСообщенийВСистемуВзаимодействия(Использование)
	
	УстановитьПривилегированныйРежим(Истина);
	
	Отбор = Новый Структура;
	Отбор.Вставить("Использование", Истина);
	Если ОбщегоНазначения.РазделениеВключено() Тогда
		Отбор.Вставить("ИмяМетода", МетаданныеЗаданияЗаписиОтложенныхСообщений().ИмяМетода);
	Иначе
		Отбор.Вставить("Метаданные", МетаданныеЗаданияЗаписиОтложенныхСообщений());
	КонецЕсли;
	
	СписокЗаданий = РегламентныеЗаданияСервер.НайтиЗадания(Отбор);
	
	АктивноеЗадание = Неопределено;
	ЗаданияДляОтключения = Новый Массив;
	
	Для Каждого Задание Из СписокЗаданий Цикл
		Если АктивноеЗадание = Неопределено Тогда
			АктивноеЗадание = Задание.УникальныйИдентификатор;
		Иначе
			ЗаданияДляОтключения.Добавить(Задание.УникальныйИдентификатор);
		КонецЕсли;
	КонецЦикла;
	
	ЗаданиеИспользуется = ЗначениеЗаполнено(АктивноеЗадание);
	
	Для Каждого ИдентификаторЗадания Из ЗаданияДляОтключения Цикл
		РегламентныеЗаданияСервер.ИзменитьЗадание(ИдентификаторЗадания, Новый Структура("Использование", Ложь));
	КонецЦикла;
	
	Если Использование И ЗаданиеИспользуется Тогда
		Возврат;
	КонецЕсли;
	
	Если Не Использование И Не ЗаданиеИспользуется Тогда
		Возврат;
	КонецЕсли;
	
	Если Использование Тогда
		Отбор.Использование = Ложь;
		СписокЗаданий = РегламентныеЗаданияСервер.НайтиЗадания(Отбор);
		
		Если СписокЗаданий.Количество() > 0 Тогда
			Параметры = Новый Структура;
			Параметры.Вставить("Использование", Истина);
			Если ЭтоСеансАвторизованногоПользователя() Тогда
				Параметры.Вставить("Параметры", Новый Массив);
				Параметры.Параметры.Добавить(Пользователи.АвторизованныйПользователь());
			КонецЕсли;
			
			РегламентныеЗаданияСервер.ИзменитьЗадание(СписокЗаданий[0].УникальныйИдентификатор, Параметры);
		Иначе
