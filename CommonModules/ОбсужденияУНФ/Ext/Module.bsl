Функция ПроверитьУстановитьПользователяДляОтправкиПриемаСообщений(ПользовательДляОтправкиПриема)
	
	Если ЭтоСеансАвторизованногоПользователя() Тогда
		АвторизованныйПользователь = Пользователи.АвторизованныйПользователь();
		
		Возврат ПользовательПодходитДляОтправкиПриемаСообщения(АвторизованныйПользователь);
	КонецЕсли;
	
	НовыйПользователь = Неопределено;
	
	Если ЗначениеЗаполнено(ПользовательДляОтправкиПриема) Тогда
		Если ПользовательПодходитДляОтправкиПриемаСообщения(ПользовательДляОтправкиПриема) Тогда
			НовыйПользователь = ПользовательДляОтправкиПриема;
		КонецЕсли;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(НовыйПользователь) Тогда
		Запрос = Новый Запрос(
		"ВЫБРАТЬ
		|	НеотправленныеСообщенияСистемыВзаимодействия.Автор КАК Автор,
		|	МАКСИМУМ(НеотправленныеСообщенияСистемыВзаимодействия.Дата) КАК ДатаПоследнегоСообщения
		|ИЗ
		|	Справочник.НеотправленныеСообщенияСистемыВзаимодействия КАК НеотправленныеСообщенияСистемыВзаимодействия
		|ГДЕ
		|	(&БезОтбораПоАвтору
		|			ИЛИ НеотправленныеСообщенияСистемыВзаимодействия.Автор <> &Автор)
		|
		|СГРУППИРОВАТЬ ПО
		|	НеотправленныеСообщенияСистемыВзаимодействия.Автор
		|
		|УПОРЯДОЧИТЬ ПО
		|	ДатаПоследнегоСообщения УБЫВ");
		Запрос.УстановитьПараметр("БезОтбораПоАвтору", Не ЗначениеЗаполнено(ПользовательДляОтправкиПриема));
		Запрос.УстановитьПараметр("Автор", ПользовательДляОтправкиПриема);
		
		Выборка = Запрос.Выполнить().Выбрать();
		Пока Выборка.Следующий() Цикл
			Если ЗначениеЗаполнено(Выборка.Автор)
				И ПользовательПодходитДляОтправкиПриемаСообщения(Выборка.Автор) Тогда
				НовыйПользователь = Выборка.Автор;
				Прервать;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(НовыйПользователь) Тогда
		Если НовыйПользователь <> ПользовательДляОтправкиПриема Тогда
			Отбор = Новый Структура;
			Отбор.Вставить("Метаданные", МетаданныеЗаданияЗаписиОтложенныхСообщений());
			Отбор.Вставить("Использование", Истина);
			
			СписокЗаданий = РегламентныеЗаданияСервер.НайтиЗадания(Отбор);
			Если СписокЗаданий.Количество() > 0 Тогда
				Параметры = Новый Структура;
				Параметры.Вставить("Параметры", Новый Массив);
				Параметры.Параметры.Добавить(НовыйПользователь);
				
				РегламентныеЗаданияСервер.ИзменитьЗадание(СписокЗаданий[0].УникальныйИдентификатор, Параметры);
			КонецЕсли;
		КонецЕсли;
		
		ИдентификаторПользователяИБ = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(НовыйПользователь, "ИдентификаторПользователяИБ");
