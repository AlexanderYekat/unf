		Если Задание.Использование И АктивноеЗадание = Неопределено Тогда
			АктивноеЗадание = Задание.УникальныйИдентификатор;
		Иначе
			ЗаданияДляУдаления.Добавить(Задание.УникальныйИдентификатор);
		КонецЕсли;
	КонецЦикла;
	
	Для Каждого ИдентификаторЗадания Из ЗаданияДляУдаления Цикл
		РегламентныеЗаданияСервер.УдалитьЗадание(ИдентификаторЗадания);
	КонецЦикла;
	
	Если ЗначениеЗаполнено(АктивноеЗадание) Тогда
		ПараметрыЗадания = Новый Структура;
		ПараметрыЗадания.Вставить("Расписание", РасписаниеРегламентногоЗаданияПоУмолчанию());
		
		РегламентныеЗаданияСервер.ИзменитьЗадание(АктивноеЗадание, ПараметрыЗадания);
	Иначе
